{% extends 'base.html.twig' %}

{% block title 'Edit account' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="my-5 text-center">Update Pofile</h1>

            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.lastName) }}
                    </div>
                </div>

                {{ form_widget(form) }}

                <div class="form-group">
                    <button class="btn btn-block btn-outline-primary" type="submit">apply changes</button>
                </div>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
