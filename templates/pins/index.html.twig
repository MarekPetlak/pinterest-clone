{% extends 'base.html.twig' %}

{% block title 'Pinterest Clone' %}

{% block body %}
    <h1>{{ pluralize(pins|length, 'Pin') }}</h1>

    {% for pin in pins %}
    <article>
        <h3><a href="{{ path('pin_show', {id: pin.id}) }}">{{ pin.title }}</a></h3>
        <p>{{ pin.description }}</p>
    </article>
    {% endfor  %}
{% endblock %}
